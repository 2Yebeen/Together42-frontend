{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@main/*": [
        "src/components/Main/*"
      ],
      "@auth/*": [
        "src/components/Auth/*"
      ],
      "@utils/*": [
        "src/components/utils/*"
      ],
      "@img/*": [
        "src/img/*"
      ],
      "@css/*": [
        "src/css/*"
      ],
    }
  }
}